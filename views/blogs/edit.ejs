<%- include("../partials/header") %>

<link rel="stylesheet" type="text/css" href="/stylesheets/blogs/edit_page.css" />
<script src="/javascripts/blogItemSelected.js"></script>

<div class="container">
	<div class="card p-5 m-5 border-secondary">
		<div class="mb-4">
			<p class="h1">Edit Post</p>
		</div>
		<div id="carouselExampleControls" class="carousel slide mb-4" data-ride="carousel">
			<div class="carousel-inner">
				<% bloginfo.img.forEach(function(blog,i){ %>
				<div class="carousel-item <%= i===0?'active':'' %>">
					<img src="<%= blog.url %>" class="d-block w-100" alt="..." />
				</div>
				<% }); %>
			</div>
			<% if(bloginfo.img.length>1) {%>
			<a
				class="carousel-control-prev"
				href="#carouselExampleControls"
				role="button"
				data-slide="prev"
			>
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a
				class="carousel-control-next"
				href="#carouselExampleControls"
				role="button"
				data-slide="next"
			>
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
			<% } %>
		</div>
		<form action="/blogs/<%= bloginfo._id%>?_method=PUT" method="POST">
			<div class="form-group mb-4">
				<label class="form-label h5 ml-2">Headline</label>
				<input
					class="form-control"
					type="text"
					name="title"
					id="title"
					value="<%= bloginfo.title %>"
					required
				/>
			</div>

			<div class="form-group mb-5">
				<label class="form-label h5 ml-2"
					>What's on your mind,&nbsp;<%= currentUser.username %> ?</label
				>
				<textarea class="form-control" name="desc" id="body" cols="30" rows="6">
<%= bloginfo.desc%></textarea
				>
			</div>
			<div class="form-group mt-3">
				<input class="btn btn-lg btn-block" type="submit" value="Update" />
			</div>
		</form>
	</div>
</div>

<%- include("../partials/footer") %>